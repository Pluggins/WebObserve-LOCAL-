    <script>
        $(document).on('click', '#loginDropdown', function (e) {
            e.stopPropagation();
        });
        $(document).ready(function () {
                @if (Request.Params["status"] == "1")
            {
                @:toastr.success('You may now login using your email address.', 'Registration completed!', { "showMethod": "fadeIn", "hideMethod": "fadeOut", timeOut: 10000, "positionClass": "toast-bottom-right", "progressBar": true});
            } else if (Request.Params["status"] == "2")
            {
                @:toastr.success('Please enjoy your stay.','Successful Login');
            } else if (Request.Params["status"] == "3")
            {
                @:toastr.warning('You have been logged out successfully.','Successful Logout');
            } else if (Request.Params["status"] == "4")
            {
                @:toastr.error('Your session has been expired, please log in again.','Session Expired');
            } else if (Request.Params["status"] == "5")
            {
                @:toastr.success('The new step has been created successfully.','Successful Step Creation');
            } else if (Request.Params["status"] == "6")
            {
                    int min = int.Parse(Request.Params["min"]);
                @:toastr.warning('Please activate your account by email verification. An email has already been dispatched @min minute(s) ago.', 'Pending Verification', { "showMethod": "fadeIn", "hideMethod": "fadeOut", timeOut: 10000, "positionClass": "toast-bottom-right", "progressBar": true });
            } else if (Request.Params["status"] == "7")
            {
                    string email = Request.Params["email"];
                @:toastr.warning('An email has been sent to you at @email, please verify before logging in.', 'Email Verification', { "showMethod": "fadeIn", "hideMethod": "fadeOut", timeOut: 10000, "positionClass": "toast-bottom-right", "progressBar": true });
            } else if (Request.Params["status"] == "8")
            {
                @:toastr.error('The Email verification token has already expired, please register again to obtain a new validation token.', 'Validation Token Invalid/Expired');
            } else if (Request.Params["status"] == "9")
            {
                @:toastr.success('Welcome to AmazeCraft, your email has been verified successfully.', 'Email Verified');
            } else if (Request.Params["status"] == "10")
            {
                @:toastr.success('Email login request approved, logging you now.', 'Request Approved');
            } else if (Request.Params["status"] == "11")
            {
                @:toastr.error('Email login request token has already been expired/invalid.', 'Request Rejected');
            } else if (Request.Params["status"] == "12")
            {
                @:toastr.warning('The previous session has been expired, please try again.', 'Session Expired');
            } else if (Request.Params["status"] == "13")
            {
                    string name = Request.Params["name"];
                @:toastr.success('Welcome back, @name!', 'Session Renewed');
            } else if (Request.Params["status"] == "14")
            {
                @:toastr.success('QR login request approved, logging you now.', 'Request Approved');
            }
        });

        $("#backbutton").on("click", function () {
            history.go(-1);
        });
        $("#logout-button").on("click", function () {
            window.location.href = "@Request.Url.Scheme://@Request.Url.Host:@Request.Url.Port/logout";
        });
        function login() {
            window.location.href = "@Request.Url.Scheme://@Request.Url.Host:@Request.Url.Port/login"
        }
    </script>
